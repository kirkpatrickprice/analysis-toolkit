    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "preLaunchTask": "uv_sync"
        },
        {
            "name": "KPAT CLI (Scripts)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/kp_analysis_toolkit/cli.py",
            "console": "integratedTerminal",
            "preLaunchTask": "uv_sync",
            "cwd": "${workspaceFolder}",
            "args": [
                "scripts",
                "--verbose",
                "-p", "testdata/"
            ]
        },
        {
            "name": "KPAT CLI (Scripts) List Systems",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/kp_analysis_toolkit/cli.py",
            "console": "integratedTerminal",
            "preLaunchTask": "uv_sync",
            "cwd": "${workspaceFolder}",
            "args": [
                "scripts",
                "-p", "testdata/",
                "--verbose",
                "--list-systems"
            ]
        },
        {
            "name": "KPAT CLI (Scripts) Validation Error",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/kp_analysis_toolkit/cli.py",
            "console": "integratedTerminal",
            "preLaunchTask": "uv_sync",
            "args": [
                "scripts",
                "-c", "no-such-file.yaml"
            ]
        },
    ]
}